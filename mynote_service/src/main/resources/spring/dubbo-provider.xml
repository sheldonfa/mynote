<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans.xsd        http://code.alibabatech.com/schema/dubbo        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">


        <!-- 提供方应用信息，用于计算依赖关系 -->
        <dubbo:application name="mynote_service"  />

        <!-- 使用multicast广播注册中心暴露服务地址 -->
        <dubbo:registry protocol="zookeeper" address="192.168.48.2:2181" />

        <!-- 用dubbo协议在20818端口暴露服务 -->
        <dubbo:protocol name="dubbo" port="20818" />

        <!-- 声明需要暴露的服务接口 -->
        <dubbo:service interface = "com.facade.UserService" ref="userService"/>

</beans>